// This is the initial Database Schema for the Code Compliance System
// We will use Prisma + Supabase (Postgres)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  DEVELOPER
}

enum RuleSeverity {
  WARNING
  CRITICAL
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  githubId      String?  @unique
  name          String?
  role          Role     @default(DEVELOPER)
  
  // Relations
  teams         TeamMember[]
  projects      Project[]      @relation("ProjectOwner")
  createdAt     DateTime       @default(now())
}

model Team {
  id          String       @id @default(cuid())
  name        String
  description String?
  
  // Relations
  members     TeamMember[]
  projects    Project[]
  rules       Rule[]       @relation("TeamRules") // Rules specific to this team
}

model TeamMember {
  id        String   @id @default(cuid())
  userId    String
  teamId    String
  role      Role     @default(DEVELOPER) // Role within the team
  
  user      User     @relation(fields: [userId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
}

model Project {
  id             String   @id @default(cuid())
  name           String
  repositoryUrl  String   // GitHub Repo URL
  githubRepoId   String?  // ID from GitHub API
  
  // Relations
  ownerId        String
  owner          User     @relation("ProjectOwner", fields: [ownerId], references: [id])
  teamId         String?
  team           Team?    @relation(fields: [teamId], references: [id])
  
  rules          ProjectRule[]
  analyses       AnalysisLog[]
  
  createdAt      DateTime @default(now())
}

model Rule {
  id             String        @id @default(cuid())
  name           String
  description    String        // The "English" rule
  
  // The Core Logic
  treeSitterQuery String       // The compiled AST query generated by AI
  language        String       // e.g., "java", "javascript"
  severity        RuleSeverity @default(WARNING)
  
  // AI Metadata
  aiExplanation   String?      // Pre-generated explanation
  aiFixTemplate   String?      // Template for auto-fix
  
  // Scope
  teamId          String?
  team            Team?        @relation("TeamRules", fields: [teamId], references: [id])
  
  projectRules    ProjectRule[]
  
  createdAt       DateTime     @default(now())
}

model ProjectRule {
  id        String  @id @default(cuid())
  projectId String
  ruleId    String
  isActive  Boolean @default(true)
  
  project   Project @relation(fields: [projectId], references: [id])
  rule      Rule    @relation(fields: [ruleId], references: [id])

  @@unique([projectId, ruleId])
}

model AnalysisLog {
  id             String   @id @default(cuid())
  projectId      String
  prNumber       Int?
  commitHash     String
  
  // Results
  status         String   // "PASS", "FAIL"
  violationsJson String   // Store detailed violation list as JSON
  
  createdAt      DateTime @default(now())
  
  project        Project  @relation(fields: [projectId], references: [id])
}
